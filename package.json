{
  "name": "discourse-projects",
  "version": "0.8.4",
  "repository": "https://github.com/ICIJ/discourse-projects/",
  "author": "ICIJ",
  "license": "MIT",
  "private": true,
  "scripts": {
    "lint:assets": "pnpm prettier --check 'assets/**/*.{scss,js,gjs,hbs}'",
    "lint:assets:fix": "pnpm prettier --write 'assets/**/*.{scss,js,gjs,hbs}'",
    "lint:tests": "pnpm prettier --check 'test/**/*.{js,gjs}'",
    "lint:prettier": "pnpm lint:assets && pnpm lint:tests",
    "lint:prettier:fix": "pnpm lint:assets --write && pnpm lint:tests --write",
    "lint:eslint": "pnpm eslint",
    "lint:eslint:fix": "pnpm eslint --fix",
    "lint:ember": "pnpm ember-template-lint --no-error-on-unmatched-pattern assets/javascripts",
    "lint:ember:fix": "pnpm lint:ember --fix",
    "lint:stylelint": "pnpm stylelint --allow-empty-input 'assets/**/*.scss'",
    "lint:stylelint:fix": "pnpm lint:stylelint --fix",
    "lint": "pnpm lint:prettier && pnpm lint:eslint && pnpm lint:ember && pnpm lint:stylelint",
    "lint:fix": "pnpm lint:prettier:fix && pnpm lint:eslint:fix && pnpm lint:ember:fix && pnpm lint:stylelint:fix"
  },
  "devDependencies": {
    "@discourse/lint-configs": "2.32.0",
    "ember-template-lint": "7.9.1",
    "eslint": "9.37.0",
    "prettier": "3.6.2",
    "stylelint": "16.25.0"
  },
  "engines": {
    "node": ">= 22",
    "npm": "please-use-pnpm",
    "yarn": "please-use-pnpm",
    "pnpm": "9.x"
  },
  "packageManager": "pnpm@9.15.5"
}
